@model dinner.net.ViewModels.HomeView
@{
    ViewBag.Title = "dinner.net Home";
}

<div class="jumbotron">
    <h1>dinner.net</h1>
    <p class="lead">
        dinner.net is a small project I started to learn ASP.NET MVC. 
        It will be used to keep a database of meals and help decide what to eat.
    </p>

</div>

<div class="row">
    <div class="col-md-6">
        <h2>Recent Meals</h2>
        <ul>
            @foreach(var rm in Model.RecentMeals)
            {
                <li>@rm.Name - @(rm.LastAte.HasValue ? ((DateTime)rm.LastAte).ToString("MM/dd/yyyy") : "(date unknown)") </li>
            }
        </ul>
        <div>
            <select>
                @foreach (var meal in Model.AllMeals)
                {
                    <option>@meal.Name</option>
                }
            </select>
            <input type="text" class="datepicker" />
        </div>
    </div>
    <div class="col-md-6">
        <h2>Ideas</h2>
        <p>List here</p>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $(".datepicker").datepicker();
        });
    </script>
}