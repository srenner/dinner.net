@model IEnumerable<dinner.net.Models.Ingredient>

@{
    ViewBag.Title = "Ingredients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtendedDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityOnHand)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExtendedDescription)
        </td>
        <td>
            <span id="quantity-item-@item.ID" class="highlighter">
                @Html.DisplayFor(modelItem => item.QuantityOnHand)
            </span>
        </td>
        <td>
            <span>
                <img src="@Url.Content("~/Content/Images/arrow-down-2.png")" title="Decrease Quantity" class="image-button" onclick="changeQuantity(@item.ID, -1)" />
                <img src="@Url.Content("~/Content/Images/arrow-up-2.png")" title="Increase Quantity" class="image-button" onclick="changeQuantity(@item.ID, 1)" />
            </span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
@section scripts {
    <script src="~/Scripts/Views/Ingredient/index.js"></script>
}