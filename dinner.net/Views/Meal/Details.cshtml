@model dinner.net.Models.Meal

@{
    ViewBag.Title = @Model.Name + " Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExtendedDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExtendedDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Effort)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Effort)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastAte)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastAte)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd>
            @foreach (var mealIngredient in Model.Ingredients)
            {
                @mealIngredient.Quantity
                <text> - </text>
                @mealIngredient.Ingredient.Name
                <br />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StepsToMake)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StepsToMake)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
